@model OMInsurance.WebApps.Models.ClientListModel
@{
    ViewBag.Title = "Клиенты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Добавить обращение для нового клиента", "Create", "ClientVisit")
    </div>
</div>
@using (Html.BeginForm("Index", "Client", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="row search-panel">
        <div class="row margined">
            <div class="col-md-11">
                <h4>Параметры поиска клиентов</h4>
            </div>
            <div class="col-md-1">
                <button type="button" href="#searchFields" class="toggle btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
                </button>
            </div>
        </div>
        <div id="searchFields" class="container">
            <div class="row margined">
                <div class="form-group-md">
                    <div class="col-md-1" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.Lastname)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.Lastname, new { @class = "form-control", tabindex = "1" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.Lastname)
                    </div>
                    <div class="col-md-2" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.PolicySeries)
                    </div>
                    <div class="col-md-2" style="padding-left:1px;padding-right:1px;right:40px;">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.PolicySeries, new { @class = "form-control", tabindex = "5" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.PolicySeries)
                    </div>
                    <div class="col-md-2" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.TemporaryPolicyNumber)
                    </div>
                    <div class="col-md-2" style="padding-left:1px;padding-right:1px;right:60px;">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.TemporaryPolicyNumber, new { @class = "form-control", maxlength = "9", tabindex = "9" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.TemporaryPolicyNumber)
                    </div>
                </div>
            </div>
            <div class="row margined">
                <div class="form-group-md">
                    <div class="col-md-1" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.Firstname)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.Firstname, new { @class = "form-control", tabindex = "2" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.Firstname)
                    </div>
                    <div class="col-md-2" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.PolicyNumber)
                    </div>
                    <div class="col-md-2" style="padding-left:1px;padding-right:1px;right:40px;">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.PolicyNumber, new { @class = "form-control", tabindex = "5", @title = "номер полиса без серии" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.PolicyNumber)
                    </div>
                    <div class="col-md-2" style="padding-top:5px;">
                        @Html.Label("Дата ВС")
                    </div>
                    <div class="col-md-1" style="padding-left:1px;padding-right:1px;right:60px;">
                        @Html.EditorFor(model => Model.SearchCriteriaModel.TemporaryPolicyDateFrom, new { @class = "form-control", tabindex = "10" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.TemporaryPolicyDateFrom)
                    </div>
                    <div class="col-md-1" style="padding-left:1px;padding-right:1px;right:60px;">
                        @Html.EditorFor(model => Model.SearchCriteriaModel.TemporaryPolicyDateTo, new { @class = "form-control", tabindex = "11" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.TemporaryPolicyDateTo)
                    </div>
                </div>
            </div>
            <div class="row margined">
                <div class="form-group-md">
                    <div class="col-md-1" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.Secondname)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.Secondname, new { @class = "form-control", tabindex = "3" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.Firstname)
                    </div>
                    <div class="col-md-2" style="padding-top:5px;">
                        @Html.Label("Дата полиса")
                    </div>
                    <div class="col-md-1" style="padding-left:1px;padding-right:1px;right:40px;">
                        @Html.EditorFor(model => Model.SearchCriteriaModel.PolicyDateFrom, new { @class = "form-control", tabindex = "7" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.PolicyDateFrom)
                    </div>
                    <div class="col-md-1" style="padding-left:1px;padding-right:1px;right:40px;">
                        @Html.EditorFor(model => Model.SearchCriteriaModel.PolicyDateTo, new { @class = "form-control", tabindex = "8" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.PolicyDateTo)
                    </div>
                </div>
            </div>
            <div class="row margined">
                <div class="form-group-md">
                    <div class="col-md-1" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.Birthday)
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => Model.SearchCriteriaModel.Birthday, new { tabindex = "4" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.Birthday)
                    </div>
                    <div class="col-md-2" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.SearchCriteriaModel.UnifiedPolicyNumber)
                    </div>
                    <div class="col-md-2" style="padding-left:1px;padding-right:1px;right:40px;">
                        @Html.TextBoxFor(model => Model.SearchCriteriaModel.UnifiedPolicyNumber, new { @class = "form-control", tabindex = "6" })
                        @Html.ValidationMessageFor(model => Model.SearchCriteriaModel.UnifiedPolicyNumber)
                    </div>
                    <div class="col-md-1" style="padding-top:5px;">
                        @Html.LabelFor(model => Model.PageSize)
                    </div>
                    <div class="col-md-1" style="padding-right:5px;left:20px;">
                        @Html.DropDownListFor(model => model.PageSize,
                    new List<SelectListItem>()
                        {
                            new SelectListItem() {  Value = "10", Text = "10", Selected = true } ,
                            new SelectListItem() {  Value = "25", Text = "25" } ,
                            new SelectListItem() {  Value = "50", Text = "50" }
                        }, new { @class = "form-control", tabindex = "12" })
                    </div>
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-1" style="right:40px;">
                        <input type="submit" value="Найти" class="btn pull-right btn-primary" tabindex="13" />
                    </div>
                    <div class="col-md-1">
                        <a href="#" onClick="reset()">Очистить</a>
                        <a href="#" onClick="$('#searchFields').trigger('reset');">Вернуть</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.Partial("_ClientsGrid", Model.Items)
            </div>
        </div>
    </div>
    @OMHelpers.Pagination("PageNumber", Model.PageNumber, Model.PageSize, Model.TotalCount)
}
<div class="row margined">
    <div class="col-md-2">
        @Html.LabelFor(model => Model.TotalCount): @Html.DisplayTextFor(model => Model.TotalCount)
    </div>
</div>

<script>
    function reset() {
        var elems = document.getElementsByTagName("input");
        for (var i = 0; i < elems.length; i++)
            if (elems[i].type == "text")
                elems[i].value = '';
    }
</script>