@model IEnumerable<OMInsurance.WebApps.Models.ReferenceUniversalItemModel>
@using OMInsurance.WebApps.Models
@{
    ViewBag.Title = "Редактор справочника DeliveryPointRef";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row margined">
    <div class="col-md-8">
        <h3>@OMInsurance.WebApps.Models.ReferenceUniversalItemModel.ReferenceDisplayName</h3>
    </div>
</div>

<div class="row margined">
    <div class="col-md-9">
        @Html.ActionLink("Добавить новую запись в таблицу", "DeliveryPointRefEdit")
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Вернуться в справочники", "Index")
    </div>
</div>

<table class="table table-striped table-condensed">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabledForOperator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabledForRegistrator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryCenterId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryPointHeadId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendSms)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @OMHelpers.ActionLinkIcon(Url, "DeliveryPointRefEdit", "Reference", (long)item.Id, "", "glyphicon-pencil", true)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabledForOperator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabledForRegistrator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryCenterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryPointHeadId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendSms)
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, refname = item.ReferenceName }, new { onclick = "return confirm('Вы уверены, что хотите удалить запись целиком?');" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Добавить новую запись в таблицу", "DeliveryPointRefEdit")
</p>