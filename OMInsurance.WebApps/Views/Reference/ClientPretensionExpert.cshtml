@model IEnumerable<OMInsurance.WebApps.Models.ReferenceUniversalItemModel>
@{
    ViewBag.Title = "Редактор справочника ClientPretensionExpert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row margined">
    <div class="col-md-8">
        <h3>@OMInsurance.WebApps.Models.ReferenceUniversalItemModel.ReferenceDisplayName</h3>
    </div>
</div>

<div class="row margined">
    <div class="col-md-9">
        @Html.ActionLink("Добавить новую запись в таблицу", "ClientPretensionExpertEdit")
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Вернуться в справочники", "Index")
    </div>
</div>

<table class="table table-striped table-condensed">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Secondname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @OMHelpers.ActionLinkIcon(Url, "ClientPretensionExpertEdit", "Reference", (long)item.Id, "", "glyphicon-pencil", true)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Secondname)
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, refname = item.ReferenceName }, new { onclick = "return confirm('Вы уверены, что хотите удалить запись целиком?');" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Добавить новую запись в таблицу", "ClientPretensionExpertEdit")
</p>
