@model IEnumerable<OMInsurance.WebApps.Models.ReferenceUniversalItemModel>
@{
    ViewBag.Title = string.Format("Редактор справочника " + OMInsurance.WebApps.Models.ReferenceUniversalItemModel.ReferenceDisplayName);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row margined">
    <div class="col-md-8">
        <h3>@OMInsurance.WebApps.Models.ReferenceUniversalItemModel.ReferenceDisplayName</h3>
    </div>
</div>

<div class="row margined">
    <div class="col-md-9">
        @Html.ActionLink("Добавить новую запись в таблицу", "MedicalCenterRefEdit")
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Вернуться в справочники", "Index")
    </div>
</div>

<table class="table table-striped table-condensed">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LPU_ID_AIS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FIL_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MCOD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FULLNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OGRN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FCOD)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @OMHelpers.ActionLinkIcon(Url, "MedicalCenterRefEdit", "Reference", (long)item.Id, "", "glyphicon-pencil", true)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LPU_ID_AIS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FIL_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MCOD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FULLNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OGRN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FCOD)
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, refname = item.ReferenceName }, new { onclick = "return confirm('Вы уверены, что хотите удалить запись целиком?');" })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Добавить новую запись в таблицу", "MedicalCenterRefEdit")
</p>
