@model IEnumerable<OMInsurance.WebApps.Models.ReferenceUniversalItemModel>
@{
    ViewBag.Title = "Редактор справочника DeliveryCenterRef";
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

<div class="row margined">
    <div class="col-md-8">
        <h3>@OMInsurance.WebApps.Models.ReferenceUniversalItemModel.ReferenceDisplayName</h3>
    </div>
</div>

<div class="row margined">
    <div class="col-md-9">
        @Html.ActionLink("Добавить новую запись в таблицу", "DeliveryCenterRefEdit")
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Вернуться в справочники", "Index")
    </div>
</div>

<table class="table table-striped table-condensed">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SMO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDigitPolicyAbailable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabledForOperator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabledForRegistrator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMFC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @OMHelpers.ActionLinkIcon(Url, "DeliveryCenterRefEdit", "Reference", (long)item.Id, "", "glyphicon-pencil", true)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SMO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDigitPolicyAbailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabledForOperator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabledForRegistrator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMFC)
            </td>
            <td>
                @*@OMHelpers.ActionLinkIcon(Url, "DeliveryCenterRefDelete", "Reference", item.Id, "", "glyphicon-trash")*@
                @*@Html.ActionLink("Edit", "DeliveryCenterRefEdit", new { id = item.Id }) |*@
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, refname = item.ReferenceName }, new { onclick = "return confirm('Вы уверены, что хотите удалить запись целиком?');" })

            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Добавить новую запись в таблицу", "DeliveryCenterRefEdit")
</p>

