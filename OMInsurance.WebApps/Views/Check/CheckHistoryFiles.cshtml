@model OMInsurance.WebApps.Models.BaseCheckFileHistoryModel
@{
    ViewBag.Title = "CheckHistoryFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="margined row">
    <div class="col-md-6">
        <h2>История общения с фондом</h2>
    </div>
</div>

@using (@Html.BeginForm("CheckHistoryFiles", "Check", FormMethod.Post))
{
    

    <div class="row search-panel">
        <h4>Параметры поиска</h4>
        <div class="container">
            <div class="row margined">
                <div class="form-group-md">
                    <div class="col-md-2">
                        @Html.LabelFor(model => Model.Search.DateFrom)
                        @Html.EditorFor(model => Model.Search.DateFrom, new { @class = "form-control", tabindex = "1" })
                        @Html.ValidationMessageFor(model => Model.Search.DateFrom)
                    </div>
                    <div class="col-md-2">
                        @Html.LabelFor(model => Model.Search.DateTo)
                        @Html.EditorFor(model => Model.Search.DateTo, new { @class = "form-control", tabindex = "2" })
                        @Html.ValidationMessageFor(model => Model.Search.DateTo)
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => Model.Search.StatusId)
                        @Html.DropDownListFor(model => model.Search.StatusId,
                                    Model.listStatuses, new { @class = "form-control", tabindex = "3" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => Model.Search.UserId)
                        @Html.DropDownListFor(model => model.Search.UserId,
                                    Model.listUsers, new { @class = "form-control", tabindex = "4" })
                    </div>
                </div>
            </div>
            <div class="margined row">
                <div class="form-group-md">
                    <div class="col-md-7">

                    </div>
                    <div class="col-md-2 form-inline media-right">
                        <div> &nbsp;</div>
                        @Html.DisplayNameFor(model => Model.PageSize)
                        @Html.DropDownListFor(model => model.PageSize,
                            new List<SelectListItem>()
                                {
                                    new SelectListItem() {  Value = "100", Text = "100", Selected = true } ,
                                    new SelectListItem() {  Value = "250", Text = "250" } ,
                                    new SelectListItem() {  Value = "500", Text = "500" }
                                }, new { @class = "form-control", tabindex = "5" })
                    </div>
                    <div class="col-md-1">
                        <div> &nbsp;</div>
                        <input type="submit" value="Найти" class="btn pull-right btn-primary" tabindex="6" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row margined">
    @Html.Partial("_CheckHistoryFiles", Model.ListFundFileHistoryModel)
</div>


