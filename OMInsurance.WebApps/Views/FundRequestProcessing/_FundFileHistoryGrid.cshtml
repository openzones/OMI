@model IEnumerable <OMInsurance.WebApps.Models.FundFileHistoryModel>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (item.IsExistFile)
                    {
                        @Html.ActionLink(item.FileName, "FileGet", "File", new { filename = item.FileName, fileurl = item.FileUrl }, new { target = "_blank" })
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.FileName)
                    }
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="col-md-12">
        Записи отсутствуют<br />
    </div>
}